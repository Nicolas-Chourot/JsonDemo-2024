@model IEnumerable<JsonDemo.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h3>Liste des cours @Helper.IconCmd("Courses", "Create", "fa-plus-square", "Ajouter...")</h3>
<hr />
@foreach (var item in Model)
{
    <div class="CourseListLayout">
        <a href="@Url.Action("Details", new {id = item.Id})">
            <div>@item.Code @item.Title</div>
        </a>
        @Helper.IconCmd("Courses", "Edit/" + item.Id, "fa-edit", "Modifier...")
        @Helper.IconConfirmCmd("Courses", "Delete/" + item.Id, "fa-times-rectangle-o", "Effacer " + item.Code + "?")
    </div>
}
